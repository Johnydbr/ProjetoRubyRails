<section ng-controller="TarefaController">
  <div class="contain-add-card">
    <div class="button-add-card">
      <div class="icon-plus">
        <i class="fa-solid fa-plus"></i>
      </div>
      <button id="mostrar-nova-tarefa" ng-class="{'item-bloqueado': formCtrl.emModoEdicao}" ng-click="formCtrl.open()">Cadastrar Tarefa</button>
    </div>
    <div class="contain-search">
      <input class="form-control mr-sm-2" ng-model="termoDaBusca" type="search" placeholder="Buscar Tarefa" aria-label="Buscar">
      <div class="btn btn-outline-success icon-search" ng-click="listCtrl.buscar(termoDaBusca)">
        <i class="fa-solid fa-magnifying-glass"></i>
      </div>
    </div>
  </div>
  <div class="contain-grid-cards"> 
    <div ng-show="formCtrl.ativo">
      <div class="contain-acordion" ng-click="formCtrl.close()" >
        <div class="accordion" id="accordion-nova-tarefa"> 
          <div class="contain-angle">  
            <div class="angle"> 
              <i class="fa-solid fa-angle-right" id="angle"> </i> 
            </div>
            <span>Nova Tarefa</span>
          </div>
        </div>
      </div>

      <div class="painel">
        <form class="body-painel" ng-submit="formCtrl.salvarTarefa()">
          <div class="input-one">
            Nome da Tarefa
            <input type="text" ng-model="formCtrl.novaTarefa.nome">
            <div class="text-danger" ng-if="formCtrl.errosDoServidor.nome">
              {{ formCtrl.errosDoServidor.nome[0] }}
            </div>
          </div>
          <div class="input-two"> 
            <div class="contain-itens">
              <span>Início</span>
              <div class="input-calendar"> 
                <input type="date" ng-model="formCtrl.novaTarefa.date_inicio">
              </div>
              <div class="text-danger" ng-if="formCtrl.errosDoServidor.date_inicio">
                {{ formCtrl.errosDoServidor.date_inicio[0] }}
              </div>
            </div>
            <div class="contain-itens">
              <span>Conclusão</span>
              <div class="input-calendar"> 
                <input type="date" ng-model="formCtrl.novaTarefa.data_fim">
              </div>
              <div class="text-danger" ng-if="formCtrl.errosDoServidor.data_fim">
                {{ formCtrl.errosDoServidor.data_fim[0] }}
              </div>
            </div>
          </div>
          <div class="input-three">
            <div class="contain-select">
              <span>Custo estimado</span>
              <div class="icon-input">
                <i class="fa-solid fa-brazilian-real-sign"></i>
                <input ng-model="formCtrl.novaTarefa.custo">
              </div> 
            </div>
            <div class="contain-select">
              <span>Status da Tarefa</span>
              <select ng-model="formCtrl.novaTarefa.status" ng-options="opcao.valor as opcao.nome for opcao in opcoesDeStatus">
              </select>
            </div>
          </div>
          <div class="contain-buttons">  
            <button class="span-back" type="button" ng-click="formCtrl.close()">
              <i class="fa-solid fa-rotate-left"></i>
              Voltar 
            </button>
            <div class="span-save">
              <i class="fa-solid fa-clipboard-list"></i>
              <input type="submit" class="button-save">
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="contain-tarefas" id="contain-tarefas">
      <div class="card-tarefa" ng-repeat="tarefa in listCtrl.tarefas">
        <div class="contain-acordion-tarefa">
          <div class="accordion-tarefa"  ng-click="itemCtrl.abrirTarefaItem(tarefa)">
            <div class="contain-angle">
              <div class="angle"><i class="fa-solid fa-angle-right"></i></div>
              <span ng-if="!tarefa.editando">{{ tarefa.nome }}</span>
              <input type="text" ng-if="tarefa.editando" ng-model="tarefa.nome">
            </div>
          </div>
          <div class="contain-buttons-tarefa">
            <div class="contain-confirm-tarefa" ng-if="tarefa.confirmandoExclusao">
              <div class="confirm-body">
                <div class="contain-confirm-titulo">
                  Deseja exlcluir tarefa?
                </div>
                <div class="contain-confirm-btn">
                  <button class="btn-confirmar" ng-click="formCtrl.excluirTarefa(tarefa)">Sim</button>
                  <button class="btn-cancelar" ng-click="tarefa.confirmandoExclusao = false">Não</button>
                </div>
              </div>
            </div>
            <div class="contain-delete-tarefa" >
              <div ng-if="tarefa.editando" ng-click="tarefa.confirmandoExclusao = true">
                <i class="fa-solid fa-trash-can"></i>
              </div>   
            </div>
            <div ng-if="!tarefa.editando" class="contain-edit-tarefa">
              <div class="edit-link" ng-click="formCtrl.editarTarefa(tarefa)">
                <i class="fa-solid fa-pencil"></i>
              </div>
            </div>
            <div class="cancelar-edicao-tarefa" ng-if="tarefa.editando" ng-click="itemCtrl.cancelarTarefaEdicao(tarefa)">
              <div>
                <i class="fa-solid fa-rotate-left"></i>
              </div>
            </div>
            <div class="confirmar-edicao-tarefa" ng-if="tarefa.editando" ng-click="formCtrl.salvarTarefa(tarefa)">
              <div>
                <i class="fa-solid fa-check"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="body-painel-tarefa" ng-if="tarefa.aberta">
          <div class="painel-tarefa-comentario" ng-submit="formCtrl.salvarTarefa()">
            <div class="contain-values-task">
              <div class="span-values-date">
                <span>Inicio</span>
                <div class="data-span">
                  <p ng-if="!tarefa.editando">{{tarefa.date_inicio}}</p>
                  <input type="date" ng-if="tarefa.editando" ng-model="tarefa.date_inicio">
                </div>
              </div>
              <div class="span-values-date">
                <span>Conclusão</span>
                <div class="data-span">
                  <p ng-if="!tarefa.editando">{{tarefa.data_fim | date:'dd/MM/yyyy'}}</p>
                  <input type="date" ng-if="tarefa.editando" ng-model="tarefa.data_fim">
                </div>
              </div>
            </div>
            <div class="contain-values-custo">
              <div class="span-values-custo">
                <span>Custo Estimado</span>
                <div class="icon">
                  <i class="fa-solid fa-brazilian-real-sign"></i>
                  <p ng-if="!tarefa.editando">{{tarefa.custo}}</p>
                  <input ng-if="tarefa.editando" ng-model="tarefa.custo">
                </div> 
              </div>
              <div class="span-values-custo" >
                <span> Status da Tarefa </span> 
                <div class="status-tarefa">
                  <p ng-if="!tarefa.editando">{{tarefa.status}}</p>
                  <select ng-if="tarefa.editando" ng-model="tarefa.status" ng-options="opcao.valor as opcao.nome for opcao in opcoesDeStatus">
                  </select>
                </div>
              </div>
            </div>
          </div>
          <div ng-class="{'hidden': formCtrl.emModoEdicao && tarefa.editando}"  class="contain-comentarios" id="painel-comentarios">
            <div class="card-nav-comentario"> <i class="fa-solid fa-comments"></i> Comentários </div>
            <div class="painel-contain-comentario">
              <div class="card-comentario-value">
                <div class="body-card-comentario" ng-repeat="comentario in tarefa.comentarios">
                  <div class="conteudo-card">{{comentario.conteudo}} </div>
                  <div class="delete-comentario" ng-click="formComentCtrl.excluirComentario(tarefa, comentario)"><i class="fa-solid fa-trash"></i></div>
                </div>
              </div>
              <div class="contain-form-comentario">
                <form ng-submit="formComentCtrl.criarComentario(tarefa)">
                  <textarea ng-model="tarefa.novoComentario.conteudo" placeholder="Adicione um comentário..."></textarea>
                  <div class="text-danger" ng-if="formCtrl.errosDoServidor.conteudo">
                      {{ formCtrl.errosDoServidor.conteudo[0] }}
                  </div>
                  <div class="enviar-form-comentario">
                    <div class="botao-comentario">
                      <i class="fa-solid fa-envelope"></i>
                      <button type="submit"> Enviar comentario</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>